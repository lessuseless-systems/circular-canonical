# Circular Protocol Canonical - Syntax Validation Generator
# Generates shell script that validates generated code syntax across languages
# Input: Scans generators/ for *.ncl generator files
# Output: dist/tests/syntax-validation.sh (generated syntax validator)

let config = import "../../../src/config.ncl" in

# List of generators to validate
let generators = [
  { name = "TypeScript SDK", file = "generators/typescript/typescript-sdk.ncl", output = "client.ts", validator = "npx typescript", args = "--noEmit --skipLibCheck", check_cmd = "npx" },
  { name = "Python SDK", file = "generators/python/python-sdk.ncl", output = "client.py", validator = "python3 -m py_compile", args = "", check_cmd = "python3" },
  { name = "Java SDK", file = "generators/java/java-sdk.ncl", output = "Client.java", validator = "javac -d", args = "", check_cmd = "javac" },
  { name = "PHP SDK", file = "generators/php/php-sdk.ncl", output = "Client.php", validator = "php -l", args = "", check_cmd = "php" },
  { name = "Go SDK", file = "generators/go/go-sdk.ncl", output = "client.go", validator = "go build", args = "", check_cmd = "go" },
  { name = "Dart SDK", file = "generators/dart/dart-sdk.ncl", output = "client.dart", validator = "dart analyze", args = "", check_cmd = "dart" },
  { name = "OpenAPI Spec", file = "generators/shared/openapi.ncl", output = "openapi.yaml", validator = "npx @apidevtools/swagger-cli validate", args = "", check_cmd = "npx", format = "yaml" },
] in

# Generate validation block for a single generator
let generate_validation = fun gen =>
  let has_format = std.record.has_field "format" gen in
  let format_flag = if has_format then
    "--format %{gen.format}"
  else
    ""
  in

  m%"
# %{gen.name}
echo -n "%{gen.name}... "
if [ -f "%{gen.file}" ]; then
    if nickel export %{gen.file} %{format_flag} > "$TEMP_DIR/%{gen.output}" 2>/dev/null; then
        # Check if validator is available
        if command -v %{gen.check_cmd} &> /dev/null; then
            if %{gen.validator} $TEMP_DIR/%{gen.output} %{gen.args} 2>/dev/null; then
                echo -e "${GREEN}âœ“ Valid${NC}"
                PASSED=$((PASSED + 1))
            else
                echo -e "${RED}âœ— Invalid syntax${NC}"
                %{gen.validator} $TEMP_DIR/%{gen.output} %{gen.args} 2>&1 | head -10
                FAILED=$((FAILED + 1))
            fi
        else
            echo -e "${YELLOW}âš  %{gen.check_cmd} not installed${NC}"
            echo "  Generated but not validated"
        fi
    else
        echo -e "${RED}âœ— Generation failed${NC}"
        FAILED=$((FAILED + 1))
    fi
else
    echo -e "${YELLOW}âš  Generator not found${NC}"
fi
  "%
in

# Generate all validation blocks
let validation_blocks = std.string.join "\n" (
  std.array.map generate_validation generators
) in

# Main script
{
  runner_script = m%"
#!/usr/bin/env bash
# Generator Syntax Validation Script
# Generated from generators/shared/test-runners/syntax-validator.ncl
#
# âš ï¸  DO NOT EDIT THIS FILE MANUALLY
# To modify, edit the generator and regenerate
#
# Purpose: Validates that generated code is syntactically correct across all target languages
# Tests that generators produce compilable/parseable output

set -euo pipefail

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
echo -e "${BLUE}ğŸ§ª Generator Syntax Validation${NC}"
echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
echo "Version: %{config.version}"
echo ""

PASSED=0
FAILED=0

# Create temp directory for outputs
TEMP_DIR=$(mktemp -d)
trap "rm -rf $TEMP_DIR" EXIT

echo "Generating artifacts to $TEMP_DIR..."
echo ""

%{validation_blocks}

# Summary
TOTAL=$((PASSED + FAILED))
echo ""
echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
echo -e "${BLUE}ğŸ“Š Syntax Validation Results${NC}"
echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"

if [ $TOTAL -eq 0 ]; then
    echo -e "${YELLOW}âš  No generators validated${NC}"
    echo "  Create generators in generators/*.ncl"
    exit 0
fi

echo -e "Syntax Validation: ${GREEN}$PASSED passed${NC}, ${RED}$FAILED failed${NC}"

if [ $FAILED -gt 0 ]; then
    echo ""
    echo -e "${RED}âœ— Some generators produced invalid syntax${NC}"
    echo ""
    exit 1
else
    echo ""
    echo -e "${GREEN}âœ“ All generated code is syntactically valid!${NC}"
    echo ""
    exit 0
fi
  "%,
}
